<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8dba0"
    tools:context=".SomGatoActivity">

    <ImageView
        android:id="@+id/malialuisa"
        android:layout_width="127dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="41dp"
        android:src="@drawable/aaaaaa" />

    <ImageView
        android:id="@+id/mitsuha"
        android:layout_width="118dp"
        android:layout_height="135dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="42dp"
        android:src="@drawable/mibotao" />

    <ImageView
        android:id="@+id/taki"
        android:layout_width="116dp"
        android:layout_height="122dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mitsuha"
        android:layout_marginBottom="22dp"
        android:src="@drawable/tbotao" />
</RelativeLayout>